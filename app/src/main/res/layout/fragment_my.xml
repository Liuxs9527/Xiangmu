<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:background="@drawable/timg"
        ></RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="102dp"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/drawee_img"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            fresco:placeholderImage="@drawable/yezi"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄瓜炒鸡蛋怕不怕"
            android:textSize="16sp"
            android:textColor="#666666"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="272dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        >
        
        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/my_icon_information"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/my_icon_circle"
                android:layout_marginTop="30dp"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/my_icon_foot"
                android:layout_marginTop="30dp"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/my_icon_wallet"
                android:layout_marginTop="30dp"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/my_icon_address"
                android:layout_marginTop="30dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="24dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_geren"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="个人资料"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/text_quanzi"
                android:layout_marginTop="26dp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="我的圈子"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:id="@+id/text_zuji"
                android:layout_marginTop="26dp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="我的足迹"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:id="@+id/text_qianbao"
                android:layout_marginTop="26dp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="我的钱包"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:id="@+id/text_dizhi"
                android:layout_marginTop="26dp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="我的收货地址"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>

    </LinearLayout>



</FrameLayout>